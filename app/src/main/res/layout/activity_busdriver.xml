<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    android:gravity="center_vertical"
    tools:context=".BusdriverActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:src="@drawable/registration_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Bus Registration!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginBottom="25dp"
        android:hint="Fill the form and continue"/>

    <EditText
        android:id="@+id/busName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="Enter Bus Name" />

    <EditText
        android:id="@+id/busRegNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="number"
        android:hint="Enter Registration Number"/>

    <EditText
        android:id="@+id/driverMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="phone"
        android:hint="Enter Driver Mobile Number" />

    <Spinner
        android:id="@+id/routes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:padding="15dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:text="Upload Document"/>

        <Button
            android:id="@+id/browseDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="15dp"
            android:text="BROWSE"/>

    </LinearLayout>

    <Button
        android:id="@+id/submitBusReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:text="SUBMIT"/>

    </LinearLayout>